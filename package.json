{
  "name": "markdown-in-sider",
  "displayName": "markdown in sider",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./src/index.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "markdown-in-sider",
          "title": "侧边栏文档",
          "icon": "icon.svg"
        }
      ]
    },
    "views": {
      "markdown-in-sider": [
        {
          "id": "markdown-in-sider:sider",
          "type": "webview",
          "name": "侧边栏文档",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "markdown-in-sider:add",
        "title": "新建",
        "icon": "$(add)"
      },
      {
        "command": "markdown-in-sider:reference",
        "title": "从文件导入",
        "icon": "$(new-file)"
      },
      {
        "command": "markdown-in-sider:select",
        "title": "切换文档",
        "icon": "$(selection)"
      },
      {
        "command": "markdown-in-sider:delete",
        "title": "删除文档",
        "icon": "$(trash)"
      },
      {
        "command": "markdown-in-sider:save",
        "title": "另存为",
        "icon": "$(symbol-reference)"
      },
      {
        "command": "markdown-in-sider:preview",
        "title": "预览",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "markdown-in-sider:add",
          "when": "view == markdown-in-sider:sider",
          "group": "navigation@0"
        },
        {
          "command": "markdown-in-sider:reference",
          "when": "view == markdown-in-sider:sider",
          "group": "navigation@1"
        },
        {
          "command": "markdown-in-sider:select",
          "when": "view == markdown-in-sider:sider",
          "group": "navigation@2"
        },
        {
          "command": "markdown-in-sider:delete",
          "when": "view == markdown-in-sider:sider",
          "group": "navigation@3"
        },
        {
          "command": "markdown-in-sider:save",
          "when": "view == markdown-in-sider:sider",
          "group": "navigation@4"
        },
        {
          "command": "markdown-in-sider:preview",
          "when": "view == markdown-in-sider:sider",
          "group": "navigation@5"
        }
      ]
    },
    "configuration": {
      "title": "markdown-in-sider",
      "properties": {
        "markdown-in-sider.markdowns": {
          "type": "array",
          "default": [
            {}
          ],
          "description": "markdown-in-sider内容列表"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test",
    "build": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "eslint": "^9.11.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
